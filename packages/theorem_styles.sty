\newcounter{ThmCounter}

% These list's main purpose is obtaining "theorem 13 b)" instead of "item 13 b)"
% See https://tex.stackexchange.com/a/156061
\newcommand \ListStructure [2] {
  \newlist{#1}{enumerate}{2}
  \setlist[#1]{format=\small}
  \setlist[#1, 1]{
    label=(\alph*),
    ref=\expandafter\csname the#2\endcsname~(\alph*)
  }
  \setlist[#1, 2]{
    label=(\alph{#1i} \roman*),
    ref=\expandafter\csname the#2\endcsname~(\alph{#1i} \roman*)
  }

  \crefalias{#1i}{#2}
  \crefalias{#1ii}{#2}
}


\theoremstyle  {plain}

% The theorems are lowercase because cleveref has these names predefined.
% The lists are uppercase because I want to highlight that they are custom.
\newtheorem    {proposition} [ThmCounter] {Proposition}
\ListStructure {PropEnum}    {proposition}

\newtheorem    {corollary}   [ThmCounter] {Corollary}
\ListStructure {CorEnum}     {corollary}

\newtheorem    {lemma}       [ThmCounter] {Lemma}
\ListStructure {LemEnum}     {lemma}

\newtheorem    {theorem}     [ThmCounter] {Theorem}
\ListStructure {ThmEnum}     {theorem}

\newtheorem    {hypothesis}  [ThmCounter] {Hypothesis}
\ListStructure {HypEnum}     {hypothesis}

\theoremstyle  {definition}

\newtheorem    {definition}  [ThmCounter] {Definition}
\ListStructure {DefEnum}     {definition}

\newtheorem    {example}     [ThmCounter] {Example}
\ListStructure {ExEnum}      {example}

\newtheorem    {remark}      [ThmCounter] {Remark}
\ListStructure {RemEnum}     {remark}

\newtheorem    {algorithm}   [ThmCounter] {Algorithm}
\ListStructure {AlgEnum}     {algorithm}
