\usepackage{xspace}
\usepackage{tocbasic}
\usepackage{titleref}

\newcommand{\CustomTOC}[3]{
  \addtotoclist{#1}
  \newcounter{counter#2}
  \setuptoc{#1}{chapteratlist,leveldown}
  \expandafter\newcommand \csname listof#1name\endcsname {#3}
  \expandafter\newcommand \csname listof#1\endcsname {\hypertarget{list:#1}{\listoftoc{#1}}}
  \expandafter\newcommand \csname l@#1\endcsname {\l@figure}

  \expandafter\newcommand \csname #2\endcsname {%
\refstepcounter{counter#2}%
\addcontentsline{#1}{#1}{\protect\numberline{\csname thecounter#2\endcsname}\TR@currentTitle}%
\textsuperscript{\hyperlink{list:#1}{#2}}%
\xspace}
}

\CustomTOC{aoc}{AOC}{References to the axiom of choice or equivalent statements}
\CustomTOC{lem}{LEM}{References to the law of the excluded middle}
\CustomTOC{usc}{USC}{References to the (non)compactness of unit spheres}
